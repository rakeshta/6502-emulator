{
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
      "max-len": [
          "warn",
          {
              "code": 120
          }
      ]
  },
  "settings": {
      "react": {
          "version": "detect"
      }
  }
}
